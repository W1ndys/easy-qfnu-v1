/* Easy-QFNUJW 全局样式 - 简洁灰白主题 */

/* 全局重置 */
page {
  background-color: #f8f9fa;
  color: #2c3e50;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  line-height: 1.6;
}

/* 通用容器 */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 0;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.card-small {
  background: #ffffff;
  border-radius: 8rpx;
  margin: 16rpx;
  padding: 24rpx;
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f1f3f4;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.card-content {
  font-size: 28rpx;
  color: #5a6c7d;
  line-height: 1.5;
}

/* 标题样式 */
.title-large {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.title-medium {
  font-size: 32rpx;
  font-weight: 500;
  color: #34495e;
  margin-bottom: 12rpx;
}

.title-small {
  font-size: 28rpx;
  font-weight: 500;
  color: #5a6c7d;
  margin-bottom: 8rpx;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: #34495e;
  color: #ffffff;
}

.btn-primary:active {
  background: #2c3e50;
  transform: scale(0.98);
}

.btn-secondary {
  background: #ecf0f1;
  color: #2c3e50;
}

.btn-secondary:active {
  background: #d5dbdb;
  transform: scale(0.98);
}

.btn-ghost {
  background: transparent;
  color: #7f8c8d;
  border: 1rpx solid #bdc3c7;
}

.btn-ghost:active {
  background: #f8f9fa;
  transform: scale(0.98);
}

.btn-disabled {
  background: #ecf0f1;
  color: #95a5a6;
  pointer-events: none;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #5a6c7d;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid #d5dbdb;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #2c3e50;
  background: #ffffff;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #7f8c8d;
  background: #ffffff;
}

.form-input.error {
  border-color: #e74c3c;
}

.form-error {
  font-size: 22rpx;
  color: #e74c3c;
  margin-top: 8rpx;
}

/* 列表样式 */
.list {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 32rpx 20rpx;
  border-bottom: 1rpx solid #f1f3f4;
  transition: background-color 0.2s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f8f9fa;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 30rpx;
  color: #2c3e50;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.list-item-desc {
  font-size: 26rpx;
  color: #7f8c8d;
}

.list-item-arrow {
  color: #bdc3c7;
  font-size: 24rpx;
}

/* 标签样式 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 40rpx;
  height: 32rpx;
  padding: 0 12rpx;
  font-size: 20rpx;
  border-radius: 16rpx;
  background: #34495e;
  color: #ffffff;
}

.badge-success {
  background: #27ae60;
}

.badge-warning {
  background: #f39c12;
}

.badge-danger {
  background: #e74c3c;
}

.badge-secondary {
  background: #95a5a6;
}

.badge-light {
  background: #ecf0f1;
  color: #5a6c7d;
}

/* 文本样式 */
.text-primary {
  color: #2c3e50;
}

.text-secondary {
  color: #7f8c8d;
}

.text-success {
  color: #27ae60;
}

.text-warning {
  color: #f39c12;
}

.text-danger {
  color: #e74c3c;
}

.text-muted {
  color: #95a5a6;
}

.text-hint {
  color: #bdc3c7;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #ecf0f1;
  margin: 32rpx 0;
}

.divider-thick {
  height: 16rpx;
  background: #f8f9fa;
  margin: 0;
}

/* 间距工具类 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }

/* 布局工具类 */
.flex { display: flex; }
.flex-column { flex-direction: column; }
.flex-center { align-items: center; justify-content: center; }
.flex-between { justify-content: space-between; }
.flex-around { justify-content: space-around; }
.flex-1 { flex: 1; }

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  color: #d5dbdb;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #95a5a6;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #bdc3c7;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-out;
}