/* 课表页面 - 简洁灰白设计 */

.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 40rpx;
}

/* 周选择器 */
.week-selector {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.week-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.week-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
}

.week-info {
  font-size: 24rpx;
  color: #7f8c8d;
}

.week-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
}

.week-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f8f9fa;
  border: 1rpx solid #d5dbdb;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #5a6c7d;
  transition: all 0.3s ease;
}

.week-btn:active {
  background: #34495e;
  color: #ffffff;
  transform: scale(0.9);
}

.current-week {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  min-width: 120rpx;
  text-align: center;
}

/* 课表网格 */
.schedule-grid {
  margin: 0 20rpx;
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

/* 表头 - 星期 */
.grid-header {
  display: flex;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
}

.time-header {
  width: 120rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #7f8c8d;
  border-right: 1rpx solid #e9ecef;
}

.day-header {
  flex: 1;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #e9ecef;
}

.day-header:last-child {
  border-right: none;
}

.day-name {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.day-date {
  font-size: 20rpx;
  color: #7f8c8d;
}

.day-today {
  background: #34495e;
  color: #ffffff;
}

.day-today .day-name,
.day-today .day-date {
  color: #ffffff;
}

/* 课表行 */
.grid-row {
  display: flex;
  border-bottom: 1rpx solid #f1f3f4;
}

.grid-row:last-child {
  border-bottom: none;
}

.time-cell {
  width: 120rpx;
  min-height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #e9ecef;
  background: #f8f9fa;
  padding: 16rpx 8rpx;
}

.time-slot {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.time-range {
  font-size: 20rpx;
  color: #7f8c8d;
  text-align: center;
  line-height: 1.2;
}

.course-cell {
  flex: 1;
  min-height: 160rpx;
  border-right: 1rpx solid #f1f3f4;
  padding: 8rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  background: #ffffff;
}

.course-cell:last-child {
  border-right: none;
}

/* 课程卡片 */
.course-card {
  background: #34495e;
  border-radius: 8rpx;
  padding: 16rpx 12rpx;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.course-card:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.course-card.type-required {
  background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
}

.course-card.type-elective {
  background: linear-gradient(135deg, #7f8c8d 0%, #5a6c7d 100%);
}

.course-card.type-pe {
  background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
}

.course-card.type-experiment {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
}

.course-name {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 500;
  line-height: 1.3;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.course-location {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.2;
}

.course-teacher {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 4rpx;
}

/* 今日课程概览 */
.today-overview {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.overview-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.today-courses {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.today-course {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 24rpx;
  border-left: 4rpx solid #34495e;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.course-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
  flex: 1;
  margin-right: 16rpx;
}

.course-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.status-upcoming {
  background: #fff3cd;
  color: #856404;
}

.status-current {
  background: #d4edda;
  color: #155724;
}

.status-finished {
  background: #e2e3e5;
  color: #6c757d;
}

.course-details {
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 1.4;
}

.no-courses-today {
  text-align: center;
  padding: 60rpx 20rpx;
}

.no-courses-icon {
  font-size: 80rpx;
  color: #d5dbdb;
  margin-bottom: 16rpx;
}

.no-courses-text {
  font-size: 28rpx;
  color: #95a5a6;
  margin-bottom: 8rpx;
}

.no-courses-desc {
  font-size: 24rpx;
  color: #bdc3c7;
}

/* 空状态 */
.empty-schedule {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  color: #d5dbdb;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #95a5a6;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #bdc3c7;
  line-height: 1.5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e9ecef;
  border-top: 4rpx solid #34495e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #7f8c8d;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 课程详情弹窗 */
.course-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #ffffff;
  border-radius: 16rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
  max-height: 80vh;
  overflow: auto;
}

.modal-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #e9ecef;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.modal-body {
  padding: 32rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f1f3f4;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #5a6c7d;
}

.detail-value {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.modal-footer {
  padding: 24rpx 32rpx 32rpx;
  text-align: center;
}

.modal-close-btn {
  width: 100%;
  height: 80rpx;
  background: #34495e;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.modal-close-btn::after {
  border: none;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}