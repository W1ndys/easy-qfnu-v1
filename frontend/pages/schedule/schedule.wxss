/* 课程表页面样式 */

.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

/* 头部控制栏 */
.header-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 30rpx;
}

.view-toggle {
  display: flex;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.toggle-btn {
  padding: 16rpx 30rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.toggle-btn.active {
  background: #007AFF;
  color: white;
}

.export-btn {
  padding: 16rpx;
  font-size: 32rpx;
  color: #007AFF;
}

/* 周次控制 */
.week-control {
  margin-bottom: 30rpx;
}

.week-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav-btn {
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  color: #007AFF;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.nav-btn.disabled {
  color: #ccc;
  pointer-events: none;
}

.nav-btn:active:not(.disabled) {
  background: #f0f0f0;
}

.week-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
}

.semester-text {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.week-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 课程表格 */
.schedule-table {
  overflow-x: auto;
  padding: 0;
}

.table-header {
  display: flex;
  background: #f8f9fa;
  border-bottom: 2rpx solid #e9ecef;
}

.time-header {
  min-width: 120rpx;
  padding: 20rpx 10rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
  text-align: center;
  border-right: 1rpx solid #e9ecef;
}

.day-header {
  flex: 1;
  min-width: 120rpx;
  padding: 20rpx 10rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
  text-align: center;
  border-right: 1rpx solid #e9ecef;
}

.day-header:last-child {
  border-right: none;
}

.table-body {
  display: flex;
  flex-direction: column;
}

.time-row {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 120rpx;
}

.time-cell {
  min-width: 120rpx;
  padding: 20rpx 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  border-right: 1rpx solid #e9ecef;
}

.period-text {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.time-text {
  font-size: 20rpx;
  color: #999;
}

.course-cell {
  flex: 1;
  min-width: 120rpx;
  padding: 8rpx;
  border-right: 1rpx solid #e9ecef;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.course-cell:last-child {
  border-right: none;
}

.course-item {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 12rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 1.3;
  transition: all 0.3s ease;
  cursor: pointer;
}

.course-item:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.course-name {
  display: block;
  font-weight: 600;
  margin-bottom: 4rpx;
  font-size: 22rpx;
}

.course-location,
.course-teacher {
  display: block;
  opacity: 0.9;
  font-size: 18rpx;
}

/* 今日视图 */
.date-info {
  margin-bottom: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.date-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date-title {
  font-size: 32rpx;
  font-weight: 600;
}

.date-text {
  font-size: 26rpx;
  opacity: 0.9;
}

.today-courses {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.today-course-item {
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.today-course-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.course-time-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  border-radius: 12rpx;
  min-width: 120rpx;
  margin-right: 30rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.course-time-badge.upcoming {
  background: #e3f2fd;
  color: #1976d2;
  border: 2rpx solid #bbdefb;
}

.course-time-badge.soon {
  background: #fff3e0;
  color: #f57c00;
  border: 2rpx solid #ffcc02;
}

.course-time-badge.ongoing {
  background: #e8f5e8;
  color: #388e3c;
  border: 2rpx solid #a5d6a7;
}

.course-time-badge.ended {
  background: #f5f5f5;
  color: #757575;
  border: 2rpx solid #e0e0e0;
}

.time-start,
.time-end {
  font-size: 22rpx;
}

.time-divider {
  font-size: 16rpx;
  margin: 4rpx 0;
  opacity: 0.7;
}

.course-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.course-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.course-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #666;
}

.course-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.status-text {
  font-size: 22rpx;
  padding: 8rpx 12rpx;
  border-radius: 50rpx;
  text-align: center;
  min-width: 80rpx;
}

.status-text.upcoming {
  background: #e3f2fd;
  color: #1976d2;
}

.status-text.soon {
  background: #fff3e0;
  color: #f57c00;
}

.status-text.ongoing {
  background: #e8f5e8;
  color: #388e3c;
}

.status-text.ended {
  background: #f5f5f5;
  color: #757575;
}

.course-arrow {
  color: #ccc;
  font-size: 20rpx;
}

/* 无课程状态 */
.no-courses-today {
  margin-bottom: 30rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.loading-text::before {
  content: '';
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e9ecef;
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 20rpx;
  vertical-align: middle;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式调整 */
@media screen and (max-width: 750rpx) {
  .course-cell {
    min-width: 100rpx;
  }
  
  .time-header,
  .day-header {
    min-width: 100rpx;
    padding: 16rpx 8rpx;
  }
  
  .course-item {
    font-size: 18rpx;
    padding: 10rpx 6rpx;
  }
  
  .course-name {
    font-size: 20rpx;
  }
}
