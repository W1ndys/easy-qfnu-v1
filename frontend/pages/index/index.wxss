/* 首页 - 简洁灰白设计 */

.container {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 顶部用户信息卡片 */
.user-header {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  padding: 40rpx 20rpx 60rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
  border-top: none;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  background: #34495e;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #ffffff;
  margin-right: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(52, 73, 94, 0.2);
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 4rpx;
}

.user-status {
  font-size: 24rpx;
  color: #27ae60;
  display: flex;
  align-items: center;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #27ae60;
  border-radius: 50%;
  margin-right: 8rpx;
}

/* 快捷统计 */
.quick-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 24rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #95a5a6;
}

/* 功能菜单网格 */
.menu-grid {
  margin: 0 20rpx 20rpx;
}

.grid-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.menu-item {
  flex: 1;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f1f3f4;
  transition: all 0.3s ease;
}

.menu-item:active {
  transform: scale(0.95);
  background: #f8f9fa;
}

.menu-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  color: #34495e;
}

.menu-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 22rpx;
  color: #95a5a6;
  line-height: 1.4;
}

.menu-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #e74c3c;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
}

/* 今日课程卡片 */
.today-courses {
  margin: 0 20rpx 20rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.view-all {
  font-size: 24rpx;
  color: #7f8c8d;
  display: flex;
  align-items: center;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.course-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  border-left: 4rpx solid #34495e;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.course-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
  flex: 1;
  margin-right: 16rpx;
}

.course-time {
  font-size: 22rpx;
  color: #7f8c8d;
  white-space: nowrap;
}

.course-info {
  font-size: 24rpx;
  color: #95a5a6;
  line-height: 1.4;
}

.no-courses {
  text-align: center;
  padding: 60rpx 20rpx;
}

.no-courses-icon {
  font-size: 80rpx;
  color: #d5dbdb;
  margin-bottom: 16rpx;
}

.no-courses-text {
  font-size: 28rpx;
  color: #95a5a6;
  margin-bottom: 8rpx;
}

.no-courses-desc {
  font-size: 24rpx;
  color: #bdc3c7;
}

/* 通知公告 */
.notices {
  margin: 0 20rpx 20rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.notice-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f3f4;
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-icon {
  width: 8rpx;
  height: 8rpx;
  background: #34495e;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.notice-content {
  flex: 1;
  font-size: 26rpx;
  color: #5a6c7d;
  line-height: 1.4;
}

.notice-time {
  font-size: 22rpx;
  color: #95a5a6;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 底部快捷操作 */
.quick-actions {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  z-index: 100;
}

.action-btn {
  width: 120rpx;
  height: 120rpx;
  background: #34495e;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(52, 73, 94, 0.3);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
  box-shadow: 0 3rpx 10rpx rgba(52, 73, 94, 0.3);
}

.action-btn.secondary {
  width: 100rpx;
  height: 100rpx;
  background: #7f8c8d;
  font-size: 40rpx;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e9ecef;
  border-top: 4rpx solid #34495e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #7f8c8d;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}