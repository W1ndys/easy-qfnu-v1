/* 首页样式 */

.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 30rpx;
  overflow: hidden;
  position: relative;
}

.user-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
}

.user-header {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 30rpx;
  backdrop-filter: blur(10rpx);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-greeting {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.current-time {
  font-size: 24rpx;
  opacity: 0.8;
}

.settings-btn {
  padding: 20rpx;
  font-size: 32rpx;
  opacity: 0.8;
  transition: opacity 0.3s ease;
}

.settings-btn:active {
  opacity: 1;
}

/* 快捷操作 */
.quick-actions {
  margin-bottom: 30rpx;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
  margin-top: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.action-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.more-btn {
  font-size: 26rpx;
  color: #007AFF;
}

/* 今日课程 */
.today-courses {
  margin-bottom: 30rpx;
}

.courses-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.course-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 6rpx solid #007AFF;
  transition: all 0.3s ease;
}

.course-item:active {
  background: #e9ecef;
  transform: translateX(4rpx);
}

.course-time {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 120rpx;
  margin-right: 30rpx;
}

.time-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #007AFF;
}

.time-divider {
  font-size: 20rpx;
  color: #999;
  margin: 4rpx 0;
}

.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.course-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.course-location,
.course-teacher {
  font-size: 24rpx;
  color: #666;
}

.course-arrow {
  color: #ccc;
  font-size: 24rpx;
}

/* 无课程提示 */
.no-courses {
  margin-bottom: 30rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 成绩摘要 */
.grades-summary {
  margin-bottom: 30rpx;
}

.summary-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.summary-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #007AFF;
  margin-bottom: 8rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #666;
}

/* 系统公告 */
.announcements {
  margin-bottom: 30rpx;
}

.announcement-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.announcement-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #ffc107;
  transition: background-color 0.3s ease;
}

.announcement-item:active {
  background: #e9ecef;
}

.announcement-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.announcement-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.announcement-time {
  font-size: 22rpx;
  color: #999;
}

.announcement-arrow {
  color: #ccc;
  font-size: 24rpx;
}

/* 底部间距 */
.bottom-spacer {
  height: 100rpx;
}

/* 动画增强 */
.fade-in {
  animation: fadeInUp 0.6s ease-out;
}

.fade-in:nth-child(1) { animation-delay: 0.1s; }
.fade-in:nth-child(2) { animation-delay: 0.2s; }
.fade-in:nth-child(3) { animation-delay: 0.3s; }
.fade-in:nth-child(4) { animation-delay: 0.4s; }
.fade-in:nth-child(5) { animation-delay: 0.5s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .actions-grid {
    gap: 20rpx;
  }
  
  .action-item {
    padding: 24rpx 16rpx;
  }
  
  .action-icon {
    font-size: 40rpx;
  }
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #999;
}

.loading::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e9ecef;
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
