/* 统计页面 - 简洁灰白设计 */

.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 40rpx;
}

/* 统计概览卡片 */
.stats-overview {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.overview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 32rpx;
  text-align: center;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  border: 1rpx solid #f1f3f4;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #34495e;
  margin-bottom: 8rpx;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

.stat-gpa {
  color: #27ae60;
}

.stat-credits {
  color: #3498db;
}

.stat-rank {
  color: #e67e22;
}

/* 功能选项卡 */
.function-tabs {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
  display: flex;
  gap: 8rpx;
}

.tab-item {
  flex: 1;
  height: 72rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #7f8c8d;
  font-weight: 500;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #34495e;
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(52, 73, 94, 0.2);
}

/* 课程统计 */
.course-stats {
  margin: 0 20rpx;
}

.stats-section {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.section-header {
  background: #f8f9fa;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #e9ecef;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
}

.section-action {
  font-size: 24rpx;
  color: #7f8c8d;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.section-content {
  padding: 32rpx;
}

/* 搜索框 */
.search-container {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 1rpx solid #d5dbdb;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #2c3e50;
  background: #f8f9fa;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.search-input:focus {
  border-color: #7f8c8d;
  background: #ffffff;
}

.search-btn {
  width: 100%;
  height: 80rpx;
  background: #34495e;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.search-btn::after {
  border: none;
}

.search-btn:active {
  transform: scale(0.98);
  background: #2c3e50;
}

/* 结果卡片 */
.result-card {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.result-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f3f4;
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: 28rpx;
  color: #5a6c7d;
}

.result-value {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.result-highlight {
  color: #27ae60;
  font-weight: 600;
}

/* 分布图表区域 */
.chart-container {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.chart-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 32rpx;
  text-align: center;
}

.grade-distribution {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.grade-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.grade-range {
  min-width: 120rpx;
  font-size: 26rpx;
  color: #5a6c7d;
  font-weight: 500;
}

.progress-bar {
  flex: 1;
  height: 24rpx;
  background: #ecf0f1;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  border-radius: 12rpx;
  transition: width 0.5s ease;
}

.progress-excellent {
  background: linear-gradient(90deg, #27ae60 0%, #2ecc71 100%);
}

.progress-good {
  background: linear-gradient(90deg, #3498db 0%, #5dade2 100%);
}

.progress-average {
  background: linear-gradient(90deg, #f39c12 0%, #f7dc6f 100%);
}

.progress-poor {
  background: linear-gradient(90deg, #e74c3c 0%, #ec7063 100%);
}

.grade-count {
  min-width: 60rpx;
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 500;
  text-align: right;
}

/* 排名信息 */
.rank-info {
  background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
  color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(52, 73, 94, 0.2);
}

.rank-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  opacity: 0.9;
}

.rank-stats {
  display: flex;
  justify-content: space-around;
}

.rank-stat {
  text-align: center;
}

.rank-stat-value {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.rank-stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 趋势分析 */
.trend-analysis {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.trend-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
}

.trend-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f3f4;
}

.trend-item:last-child {
  border-bottom: none;
}

.trend-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.trend-up {
  background: #d4edda;
  color: #27ae60;
}

.trend-down {
  background: #f8d7da;
  color: #e74c3c;
}

.trend-stable {
  background: #fff3cd;
  color: #f39c12;
}

.trend-content {
  flex: 1;
}

.trend-text {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.trend-desc {
  font-size: 22rpx;
  color: #7f8c8d;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  color: #d5dbdb;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #95a5a6;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #bdc3c7;
  line-height: 1.5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e9ecef;
  border-top: 4rpx solid #34495e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #7f8c8d;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}