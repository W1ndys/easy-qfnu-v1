/* 登录页面 - 简洁灰白设计 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部装饰 */
.top-decoration {
  height: 200rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f1f3f4 100%);
  position: relative;
  overflow: hidden;
}

.top-decoration::after {
  content: '';
  position: absolute;
  bottom: -50rpx;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #f8f9fa;
  border-radius: 50% 50% 0 0 / 100% 100% 0 0;
}

/* 头部区域 */
.login-header {
  text-align: center;
  padding: 60rpx 40rpx 80rpx;
  position: relative;
  z-index: 2;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: 0 8rpx 32rpx rgba(44, 62, 80, 0.1);
  border: 4rpx solid #ecf0f1;
  color: #34495e;
}

.app-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.app-desc {
  display: block;
  font-size: 24rpx;
  color: #95a5a6;
  line-height: 1.5;
}

/* 登录表单 */
.login-form {
  flex: 1;
  padding: 0 40rpx;
  margin-bottom: 40rpx;
}

.login-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f1f3f4;
  position: relative;
}

.login-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #34495e;
  border-radius: 2rpx;
}

.form-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 48rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #5a6c7d;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-wrapper {
  position: relative;
}

.input-field {
  width: 100%;
  height: 96rpx;
  padding: 0 20rpx 0 56rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2c3e50;
  background: #f8f9fa;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #7f8c8d;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(127, 140, 141, 0.1);
}

.input-field.error {
  border-color: #e74c3c;
  background: #fdf2f2;
}

.input-icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #95a5a6;
  pointer-events: none;
}

.password-toggle {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #95a5a6;
  padding: 8rpx;
}

.input-error {
  font-size: 22rpx;
  color: #e74c3c;
  margin-top: 12rpx;
  margin-left: 4rpx;
}

/* 登录按钮 */
.login-button {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(52, 73, 94, 0.3);
  transition: all 0.3s ease;
}

.login-button::after {
  border: none;
}

.login-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(52, 73, 94, 0.3);
}

.login-button.loading {
  background: #95a5a6;
  box-shadow: none;
}

/* 辅助功能 */
.form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32rpx;
  padding: 0 4rpx;
}

.remember-me {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #7f8c8d;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  border: 2rpx solid #bdc3c7;
  border-radius: 4rpx;
  background: #ffffff;
}

.checkbox.checked {
  border-color: #34495e;
  background: #34495e;
  color: #ffffff;
  text-align: center;
  line-height: 28rpx;
  font-size: 20rpx;
}

.forgot-password {
  font-size: 24rpx;
  color: #7f8c8d;
  text-decoration: none;
}

.forgot-password:active {
  color: #5a6c7d;
}

/* 底部信息 */
.login-footer {
  padding: 40rpx;
  text-align: center;
}

.footer-links {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 32rpx;
}

.footer-link {
  font-size: 26rpx;
  color: #7f8c8d;
  text-decoration: none;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #ffffff;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.footer-link:active {
  background: #f8f9fa;
  color: #5a6c7d;
}

.footer-info {
  font-size: 22rpx;
  color: #bdc3c7;
  line-height: 1.6;
  margin-top: 24rpx;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(248, 249, 250, 0.8);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  text-align: center;
  padding: 40rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e9ecef;
  border-top: 4rpx solid #34495e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #7f8c8d;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}