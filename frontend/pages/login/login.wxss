/* 登录页面样式 */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
}

/* 头部区域 */
.login-header {
  text-align: center;
  margin-bottom: 80rpx;
  flex-shrink: 0;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.app-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
}

.app-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 表单区域 */
.login-form {
  background: white;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 0.5s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.form-input {
  flex: 1;
  height: 100rpx;
  padding: 0 60rpx 0 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  font-size: 30rpx;
  background: #fafafa;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #007AFF;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(0, 122, 255, 0.1);
}

.form-input.error {
  border-color: #ff4757;
  background: #fff5f5;
}

.input-icon,
.password-toggle {
  position: absolute;
  right: 24rpx;
  font-size: 32rpx;
  color: #999;
}

.password-toggle {
  cursor: pointer;
  user-select: none;
}

.form-error {
  display: block;
  font-size: 24rpx;
  color: #ff4757;
  margin-top: 12rpx;
  margin-left: 4rpx;
}

/* 隐私协议 */
.privacy-section {
  margin-bottom: 40rpx;
}

.privacy-label {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.privacy-text {
  margin-left: 16rpx;
  flex: 1;
}

.link {
  color: #007AFF;
  text-decoration: underline;
}

/* 登录按钮 */
.btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

.btn-disabled {
  background: #e9ecef !important;
  color: #6c757d !important;
  box-shadow: none !important;
  transform: none !important;
}

/* 辅助操作 */
.login-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.action-link {
  font-size: 26rpx;
  color: #007AFF;
  text-decoration: underline;
}

/* 安全提示 */
.security-notice {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.notice-title {
  font-size: 28rpx;
  color: white;
  font-weight: 600;
  margin-bottom: 20rpx;
  text-align: center;
}

.notice-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.notice-content text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

/* 版本信息 */
.version-info {
  text-align: center;
  margin-top: auto;
  padding-top: 20rpx;
}

.version-text {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 8rpx;
}

.copyright {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
}
