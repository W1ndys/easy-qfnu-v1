/* 调试页面样式 */

.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.test-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.test-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.test-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.test-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.test-result {
  font-size: 24rpx;
  color: #666;
}

.test-status {
  font-size: 32rpx;
  padding: 8rpx;
}

.test-status.success {
  color: #28a745;
}

.test-status.error {
  color: #dc3545;
}

.actions {
  text-align: center;
  margin: 40rpx 0;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.btn-primary::after {
  border: none;
}

.tips {
  background: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: 12rpx;
  padding: 30rpx;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #856404;
  margin-bottom: 16rpx;
}

.tips-content {
  font-size: 24rpx;
  color: #856404;
  line-height: 1.6;
  white-space: pre-line;
}
