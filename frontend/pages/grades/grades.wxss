/* 成绩查询页面样式 */

.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

/* 统计卡片 */
.stats-card {
  margin-bottom: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
}

.detail-btn {
  font-size: 26rpx;
  opacity: 0.9;
  text-decoration: underline;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.extra-stats {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.extra-stat {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 24rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
}

.extra-stat.excellent {
  background: rgba(40, 167, 69, 0.2);
  border: 2rpx solid rgba(40, 167, 69, 0.3);
}

.extra-stat.failed {
  background: rgba(220, 53, 69, 0.2);
  border: 2rpx solid rgba(220, 53, 69, 0.3);
}

.extra-label {
  opacity: 0.9;
}

.extra-value {
  font-weight: 600;
}

/* 筛选卡片 */
.filter-card {
  margin-bottom: 30rpx;
}

.filter-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  flex: 1;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
}

.semester-picker {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 2rpx solid #e9ecef;
  min-width: 200rpx;
}

.semester-text {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.picker-arrow {
  font-size: 20rpx;
  margin-left: 16rpx;
}

.export-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #007AFF;
  color: white;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.export-icon {
  margin-right: 8rpx;
}

.sort-row {
  display: flex;
  align-items: center;
}

.sort-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.sort-options {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.sort-option {
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 50rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.sort-option.active {
  background: #007AFF;
  color: white;
  border-color: #007AFF;
}

/* 成绩列表 */
.grades-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.grade-item {
  position: relative;
  transition: all 0.3s ease;
}

.grade-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 10rpx rgba(0, 0, 0, 0.1);
}

.grade-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.course-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  line-height: 1.4;
  margin-right: 20rpx;
}

.score-badge {
  padding: 8rpx 16rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: 600;
  min-width: 80rpx;
  text-align: center;
}

.score-badge.excellent {
  background: #d4edda;
  color: #155724;
  border: 2rpx solid #c3e6cb;
}

.score-badge.good {
  background: #d1ecf1;
  color: #0c5460;
  border: 2rpx solid #bee5eb;
}

.score-badge.pass {
  background: #fff3cd;
  color: #856404;
  border: 2rpx solid #ffeaa7;
}

.score-badge.fail {
  background: #f8d7da;
  color: #721c24;
  border: 2rpx solid #f5c6cb;
}

.grade-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.detail-row {
  display: flex;
  align-items: center;
}

.detail-label {
  font-size: 24rpx;
  color: #666;
  min-width: 80rpx;
}

.detail-value {
  font-size: 24rpx;
  color: #333;
  flex: 1;
}

.grade-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.course-type {
  font-size: 22rpx;
  color: #999;
  padding: 6rpx 12rpx;
  background: #f8f9fa;
  border-radius: 4rpx;
}

.view-detail {
  font-size: 22rpx;
  color: #007AFF;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.loading-text::before {
  content: '';
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e9ecef;
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 20rpx;
  vertical-align: middle;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 选择器遮罩 */
.picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.picker-overlay.show {
  opacity: 1;
  visibility: visible;
}

.picker-content {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  width: 100%;
  max-height: 70vh;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.picker-overlay.show .picker-content {
  transform: translateY(0);
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.picker-close {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.picker-view {
  height: 400rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}
