/* 成绩页面 - 简洁灰白设计 */

.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 40rpx;
}

/* 顶部统计卡片 */
.grade-summary {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.summary-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 32rpx;
  text-align: center;
}

.summary-stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #34495e;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

.stat-gpa {
  color: #27ae60;
}

.stat-credits {
  color: #3498db;
}

/* 筛选和排序 */
.filter-section {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.filter-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
  min-width: 120rpx;
}

.filter-controls {
  flex: 1;
  display: flex;
  gap: 16rpx;
  margin-left: 20rpx;
}

.semester-picker {
  flex: 1;
  height: 64rpx;
  border: 1rpx solid #d5dbdb;
  border-radius: 8rpx;
  background: #f8f9fa;
  color: #2c3e50;
  font-size: 26rpx;
  text-align: center;
  line-height: 62rpx;
}

.sort-buttons {
  display: flex;
  gap: 12rpx;
}

.sort-btn {
  padding: 12rpx 20rpx;
  border: 1rpx solid #d5dbdb;
  border-radius: 20rpx;
  background: #f8f9fa;
  color: #5a6c7d;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  transition: all 0.3s ease;
}

.sort-btn.active {
  background: #34495e;
  color: #ffffff;
  border-color: #34495e;
}

.sort-btn:active {
  transform: scale(0.95);
}

.sort-icon {
  font-size: 20rpx;
}

/* 成绩列表 */
.grades-list {
  margin: 0 20rpx;
}

.semester-group {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.semester-header {
  background: #f8f9fa;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #e9ecef;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.semester-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
}

.semester-stats {
  font-size: 24rpx;
  color: #7f8c8d;
}

.grade-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f1f3f4;
  transition: background-color 0.2s ease;
}

.grade-item:last-child {
  border-bottom: none;
}

.grade-item:active {
  background: #f8f9fa;
}

.grade-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.course-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #2c3e50;
  flex: 1;
  line-height: 1.4;
  margin-right: 16rpx;
}

.grade-score {
  font-size: 32rpx;
  font-weight: 700;
  text-align: right;
  min-width: 80rpx;
}

.score-excellent {
  color: #27ae60;
}

.score-good {
  color: #3498db;
}

.score-average {
  color: #f39c12;
}

.score-poor {
  color: #e74c3c;
}

.grade-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #7f8c8d;
}

.course-info {
  display: flex;
  gap: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.grade-point {
  font-weight: 500;
  color: #34495e;
}

/* 空状态 */
.empty-grades {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  color: #d5dbdb;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #95a5a6;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #bdc3c7;
  line-height: 1.5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e9ecef;
  border-top: 4rpx solid #34495e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #7f8c8d;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 下拉刷新提示 */
.refresh-tip {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  margin: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

.refresh-tip-text {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 成绩详情弹窗 */
.grade-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #ffffff;
  border-radius: 16rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
  max-height: 80vh;
  overflow: auto;
}

.modal-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #e9ecef;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.modal-body {
  padding: 32rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f1f3f4;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #5a6c7d;
}

.detail-value {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.modal-footer {
  padding: 24rpx 32rpx 32rpx;
  text-align: center;
}

.modal-close-btn {
  width: 100%;
  height: 80rpx;
  background: #34495e;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.modal-close-btn::after {
  border: none;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}