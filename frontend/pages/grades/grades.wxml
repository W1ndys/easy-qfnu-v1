<view class="container">
  <view wx:if="{{isLoading}}" class="loading-container">
    <view class="loading-icon"></view>
    <text class="loading-text">正在从教务系统同步成绩...</text>
  </view>

  <block wx:else>
    <view wx:if="{{semesters.length === 0}}" class="empty-container">
      <image class="empty-icon" src="/static/images/empty-icon.png"></image>
      <text class="empty-text">没有查询到任何成绩记录</text>
    </view>
    
    <view class="semester-card" wx:for="{{semesters}}" wx:key="semesterName">
      <view class="semester-header">{{item.semesterName}}</view>
      
      <view class="grade-item" wx:for="{{item.grades}}" wx:for-item="grade" wx:key="courseCode">
        <view class="course-info">
          <text class="course-name">{{grade.courseName}}</text>
          <text class="course-credit">学分: {{grade.credit}} | 绩点: {{grade.gpa}}</text>
        </view>
        <view class="score-info">
          <text class="score">{{grade.score}}</text>
        </view>
      </view>
    </view>
  </block>
</view>