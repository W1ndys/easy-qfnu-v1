/* 个人中心页面 - 简洁灰白设计 */

.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 40rpx;
}

/* 用户信息头部 */
.user-header {
  background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
  padding: 60rpx 40rpx 80rpx;
  position: relative;
  overflow: hidden;
}

.user-header::after {
  content: '';
  position: absolute;
  bottom: -50rpx;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #f8f9fa;
  border-radius: 50% 50% 0 0 / 100% 100% 0 0;
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #ffffff;
  margin-right: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.user-status {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #27ae60;
  border-radius: 50%;
  margin-right: 8rpx;
}

/* 统计卡片 */
.stats-cards {
  margin: 0 20rpx;
  transform: translateY(-40rpx);
  position: relative;
  z-index: 3;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 16rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f1f3f4;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #34495e;
  margin-bottom: 8rpx;
  display: block;
}

.stat-label {
  font-size: 22rpx;
  color: #7f8c8d;
}

.stat-gpa {
  color: #27ae60;
}

.stat-credits {
  color: #3498db;
}

.stat-courses {
  color: #e67e22;
}

/* 功能菜单 */
.menu-sections {
  margin: 20rpx;
}

.menu-section {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.section-title {
  background: #f8f9fa;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  border-bottom: 1rpx solid #e9ecef;
}

.menu-list {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f1f3f4;
  transition: background-color 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f9fa;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
  border: 2rpx solid #ecf0f1;
}

.menu-icon.primary {
  background: rgba(52, 73, 94, 0.1);
  color: #34495e;
  border-color: rgba(52, 73, 94, 0.2);
}

.menu-icon.success {
  background: rgba(39, 174, 96, 0.1);
  color: #27ae60;
  border-color: rgba(39, 174, 96, 0.2);
}

.menu-icon.warning {
  background: rgba(243, 156, 18, 0.1);
  color: #f39c12;
  border-color: rgba(243, 156, 18, 0.2);
}

.menu-icon.danger {
  background: rgba(231, 76, 60, 0.1);
  color: #e74c3c;
  border-color: rgba(231, 76, 60, 0.2);
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 1.4;
}

.menu-arrow {
  color: #bdc3c7;
  font-size: 24rpx;
}

.menu-badge {
  background: #e74c3c;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  margin-left: 16rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 版本信息 */
.version-info {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e9ecef;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  background: #f8f9fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #34495e;
  margin: 0 auto 24rpx;
  border: 4rpx solid #ecf0f1;
}

.app-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.app-version {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
}

.app-desc {
  font-size: 24rpx;
  color: #95a5a6;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.developer-info {
  font-size: 22rpx;
  color: #bdc3c7;
}

/* 退出按钮 */
.logout-section {
  margin: 20rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: transparent;
  color: #e74c3c;
  border: 2rpx solid #e74c3c;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background: #e74c3c;
  color: #ffffff;
  transform: scale(0.98);
}

/* 设置弹窗 */
.settings-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #ffffff;
  border-radius: 16rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
  max-height: 80vh;
  overflow: auto;
}

.modal-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #e9ecef;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.modal-body {
  padding: 32rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f1f3f4;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.setting-desc {
  font-size: 22rpx;
  color: #7f8c8d;
  margin-top: 4rpx;
}

.setting-control {
  display: flex;
  align-items: center;
}

.switch {
  width: 88rpx;
  height: 48rpx;
  background: #ecf0f1;
  border-radius: 24rpx;
  position: relative;
  transition: all 0.3s ease;
}

.switch.active {
  background: #34495e;
}

.switch-thumb {
  width: 40rpx;
  height: 40rpx;
  background: #ffffff;
  border-radius: 50%;
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.switch.active .switch-thumb {
  left: 44rpx;
}

.modal-footer {
  padding: 24rpx 32rpx 32rpx;
  text-align: center;
}

.modal-close-btn {
  width: 100%;
  height: 80rpx;
  background: #34495e;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.modal-close-btn::after {
  border: none;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}