/* 个人中心页面样式 */

.container {
    padding: 20rpx;
    background: #f8f8f8;
    min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
    margin-bottom: 30rpx;
    padding: 0;
    overflow: hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    position: relative;
}

.user-background {
    position: relative;
    padding: 40rpx;
    color: white;
}

.user-background::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -30%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
    animation: float 8s ease-in-out infinite;
}

@keyframes float {

    0%,
    100% {
        transform: translateY(0px) rotate(0deg);
    }

    50% {
        transform: translateY(-20px) rotate(5deg);
    }
}

.user-content {
    display: flex;
    align-items: center;
    position: relative;
    z-index: 2;
}

.user-avatar {
    width: 120rpx;
    height: 120rpx;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48rpx;
    margin-right: 40rpx;
    backdrop-filter: blur(10rpx);
    border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 12rpx;
}

.user-name {
    font-size: 36rpx;
    font-weight: 700;
    margin-bottom: 8rpx;
}

.user-id,
.user-join {
    font-size: 26rpx;
    opacity: 0.9;
}

.user-decoration {
    position: absolute;
    top: 20rpx;
    right: 30rpx;
    z-index: 1;
}

.decoration-text {
    font-size: 80rpx;
    font-weight: 900;
    opacity: 0.1;
    transform: rotate(-15deg);
}

/* 快捷统计 */
.quick-stats {
    margin-bottom: 30rpx;
}

.stats-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 30rpx;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20rpx;
}

.stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx 16rpx;
    background: #f8f9fa;
    border-radius: 12rpx;
    border: 2rpx solid #e9ecef;
}

.stat-value {
    font-size: 32rpx;
    font-weight: 700;
    color: #007AFF;
    margin-bottom: 8rpx;
}

.stat-label {
    font-size: 22rpx;
    color: #666;
    text-align: center;
}

/* 功能菜单 */
.menu-list {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
    margin-bottom: 30rpx;
}

.menu-item {
    display: flex;
    align-items: center;
    padding: 30rpx;
    transition: all 0.3s ease;
}

.menu-item:active {
    transform: translateY(2rpx);
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.menu-icon {
    width: 80rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 50%;
    margin-right: 30rpx;
}

.menu-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 8rpx;
}

.menu-name {
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
}

.menu-desc {
    font-size: 24rpx;
    color: #666;
}

.menu-arrow {
    color: #ccc;
    font-size: 24rpx;
}

/* 应用信息 */
.app-info {
    margin-bottom: 30rpx;
}

.info-header {
    margin-bottom: 30rpx;
}

.info-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
}

.info-list {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
}

.info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
    border-bottom: none;
}

.info-label {
    font-size: 28rpx;
    color: #666;
}

.info-value {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
}

/* 免责声明 */
.disclaimer {
    margin-bottom: 30rpx;
    background: #fff8e1;
    border: 2rpx solid #ffecb3;
}

.disclaimer-header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.disclaimer-icon {
    font-size: 32rpx;
    margin-right: 16rpx;
}

.disclaimer-title {
    font-size: 28rpx;
    font-weight: 600;
    color: #e65100;
}

.disclaimer-content {
    padding-left: 48rpx;
}

.disclaimer-text {
    font-size: 24rpx;
    color: #bf360c;
    line-height: 1.6;
    white-space: pre-line;
}

/* 退出登录 */
.logout-section {
    margin-bottom: 40rpx;
}

.logout-btn {
    width: 100%;
    height: 88rpx;
    background: transparent;
    border: 2rpx solid #dc3545;
    color: #dc3545;
    border-radius: 44rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    font-weight: 600;
    transition: all 0.3s ease;
}

.logout-btn:active {
    background: #dc3545;
    color: white;
    transform: scale(0.98);
}

.logout-btn::after {
    border: none;
}

.logout-icon {
    margin-right: 12rpx;
    font-size: 24rpx;
}

.logout-text {
    font-size: 28rpx;
    font-weight: 600;
}

/* 底部间距 */
.bottom-spacer {
    height: 100rpx;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 16rpx;
    }

    .stat-item {
        padding: 24rpx 12rpx;
    }

    .user-avatar {
        width: 100rpx;
        height: 100rpx;
        font-size: 40rpx;
    }

    .user-name {
        font-size: 32rpx;
    }
}

/* 动画效果 */
.card {
    animation: fadeInUp 0.6s ease-out;
}

.card:nth-child(1) {
    animation-delay: 0.1s;
}

.card:nth-child(2) {
    animation-delay: 0.2s;
}

.card:nth-child(3) {
    animation-delay: 0.3s;
}

.card:nth-child(4) {
    animation-delay: 0.4s;
}

.card:nth-child(5) {
    animation-delay: 0.5s;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30rpx);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* 悬浮效果 */
.menu-item {
    position: relative;
    overflow: hidden;
}

.menu-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(0, 122, 255, 0.1), transparent);
    transition: left 0.6s ease;
}

.menu-item:active::before {
    left: 100%;
}